= form_for @opinion, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :nickname, :class => 'control-label'
    .controls
      = f.text_field :nickname, :class => 'text_field'
  .control-group
    = f.label :about, :class => 'control-label'
    .controls
      = f.text_area :about, :class => 'text_field'
  .control-group
    = f.label :tag_id, :class => 'control-label'
    .controls
      = f.collection_select :tag_id, Tag.all, :id, :name, prompt: true
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), opinions_path, :class => 'btn'
