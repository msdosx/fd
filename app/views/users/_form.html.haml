= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :soname
    = f.text_field :soname
  .field
    = f.label :lastname
    = f.text_field :lastname
  .field
    = f.label :bday
    = f.date_select :bday
  .field
    = f.label :hobby
    = f.text_area :hobby
  .actions
    = f.submit 'Save'
