.span2
  .fixed_menu
    .well.sidebar-nav
      %ul.nav.nav-list
        %h3 Выбор по рубрикам
        %li.nav-header
        - @tags.each do |tag|
          %li
            = link_to "##{tag.name}", user_path(current_user)
        %hr
.span9
  %h1.text-center
    Лента новостей
  -@post.each do |post|
    .span6.news
      .msg_body
        .hero-unit
          .media
            -unless post.pic_url == '0'
              %a.pull-left{href: post.pic_url}
                =image_tag post.pic_url, class: 'img-polaroid img_blog'
            .media-body
              %h4.media-heading.text-center
                =post.from
              .media
                -#=post.updated_at
                %p
                  =post.message[0..100]
          %p
            =image_tag 'like.png', class: 'like'
            =post.likes
