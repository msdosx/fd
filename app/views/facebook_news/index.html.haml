- model_class = FacebookNews
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:nickname)
      %th= model_class.human_attribute_name(:about)
      %th= model_class.human_attribute_name(:tag_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @facebook_news.each do |facebook_news|
      %tr
        %td= link_to facebook_news.id, facebook_news_path(facebook_news)
        %td= facebook_news.nickname
        %td= facebook_news.about
        %td= facebook_news.tag_id
        %td=l facebook_news.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_facebook_news_path(facebook_news), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), facebook_news_path(facebook_news), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_facebook_news_path, :class => 'btn btn-primary'
