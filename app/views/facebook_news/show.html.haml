- model_class = FacebookNews
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:nickname) + ':'
  %br
  = @facebook_news.nickname
%p
  %strong= model_class.human_attribute_name(:about) + ':'
  %br
  = @facebook_news.about
%p
  %strong= model_class.human_attribute_name(:tag_id) + ':'
  %br
  = @facebook_news.tag_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), facebook_news_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_facebook_news_path(@facebook_news), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), facebook_news_path(@facebook_news), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
